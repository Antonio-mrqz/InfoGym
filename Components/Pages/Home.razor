@page "/"
@inject NavigationManager NavigationManager

<style>
    .hero {
        position: relative;
        width: 100%;
        height: 100vh;
        background: url('/images/gym1.png') no-repeat center center/cover;
        display: flex;
        align-items: center;
        justify-content: center;
        text-align: center;
        color: white;
    }

    .hero-overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.5);
    }

    .hero-content {
        position: relative;
        z-index: 2;
    }
</style>

<div class="hero">
    <div class="hero-overlay"></div>
    <div class="hero-content">
        <MudText Typo="Typo.h1" Align="Align.Center" Class="mb-2" Color="Color.Primary" Style="font-family: 'Oswald', sans-serif; font-weight: 700;">Bienvenido a InfoGym</MudText>
        <MudText Typo="Typo.h5" Align="Align.Center" Class="mb-4">Tu guía completa de ejercicios y rutinas para el gimnasio</MudText>
    </div>
</div>

<MudContainer MaxWidth="MaxWidth.Large" Class="mt-4">
    <MudGrid Justify="Justify.Center" Class="my-6">
        <MudItem xs="12" md="4">
            <MudCard Elevation="3" Class="h-100">
                <div style="height: 200px; display: flex; justify-content: center; align-items: center;">
                    <img src="/images/biblioteca.png" style="max-height: 100%; max-width: 100%; object-fit: contain;padding: 10px;" />
                </div>
                <MudCardContent>
                    <MudText Typo="Typo.h5">Biblioteca de Ejercicios</MudText>
                    <MudText Typo="Typo.body2">Explora nuestra extensa colección de ejercicios con instrucciones detalladas y videos demostrativos.</MudText>
                </MudCardContent>
            </MudCard>
        </MudItem>
        <MudItem xs="12" md="4">
            <MudCard Elevation="3" Class="h-100">
                <div style="height: 200px; display: flex; justify-content: center; align-items: center;">
                    <img src="/images/reloj.png" style="max-height: 100%; max-width: 100%; object-fit: contain; padding: 10px;" />
                </div>
                <MudCardContent>
                    <MudText Typo="Typo.h5">Planificador de Rutinas</MudText>
                    <MudText Typo="Typo.body2">Organiza tu programa de entrenamiento semanal y realiza un seguimiento de tu progreso.</MudText>
                </MudCardContent>
            </MudCard>
        </MudItem>
        <MudItem xs="12" md="4">
            <MudCard Elevation="3" Class="h-100">
                <div style="height: 200px; display: flex; justify-content: center; align-items: center;">
                    <img src="/images/comunidad.png" style="max-height: 100%; max-width: 100%; object-fit: contain;" />
                </div>
                <MudCardContent>
                    <MudText Typo="Typo.h5">Comunidad</MudText>
                    <MudText Typo="Typo.body2">Conecta con otros entusiastas del fitness y comparte tus experiencias y logros.</MudText>
                </MudCardContent>
            </MudCard>
        </MudItem>
    </MudGrid>

    <MudPaper Elevation="3" Class="pa-4 my-4">
        <MudText Typo="Typo.h4" Align="Align.Center" Class="mb-4">¿Listo para comenzar?</MudText>
        <MudGrid Justify="Justify.Center">
            <MudItem xs="12" sm="6" md="3">
                <MudButton Variant="Variant.Filled" Color="Color.Primary" Size="Size.Large" FullWidth="true" OnClick="@(() => NavigationManager.NavigateTo("/login"))">
                    <MudIcon Icon="@Icons.Material.Filled.Login" Class="mr-2" /> Iniciar Sesión
                </MudButton>
            </MudItem>
            <MudItem xs="12" sm="6" md="3">
                <MudButton Variant="Variant.Outlined" Color="Color.Secondary" Size="Size.Large" FullWidth="true" OnClick="@(() => NavigationManager.NavigateTo("/register"))">
                    <MudIcon Icon="@Icons.Material.Filled.PersonAdd" Class="mr-2" /> Registrarse
                </MudButton>
            </MudItem>
        </MudGrid>
    </MudPaper>

    <MudDivider Class="my-6" />

    <MudText Typo="Typo.h5" Align="Align.Center" Class="my-4">¿Por qué elegir InfoGym?</MudText>
    <MudGrid>
        <MudItem xs="12" sm="6" md="4">
            <MudPaper Elevation="0" Class="pa-4 d-flex flex-column align-center">
                <MudIcon Icon="@Icons.Material.Filled.FitnessCenter" Color="Color.Primary" Size="Size.Large" Class="mb-2" />
                <MudText Typo="Typo.h6" Align="Align.Center">Ejercicios Detallados</MudText>
                <MudText Typo="Typo.body2" Align="Align.Center">Instrucciones paso a paso y consejos profesionales.</MudText>
            </MudPaper>
        </MudItem>
        <MudItem xs="12" sm="6" md="4">
            <MudPaper Elevation="0" Class="pa-4 d-flex flex-column align-center">
                <MudIcon Icon="@Icons.Material.Filled.Timeline" Color="Color.Primary" Size="Size.Large" Class="mb-2" />
                <MudText Typo="Typo.h6" Align="Align.Center">Seguimiento de Progreso</MudText>
                <MudText Typo="Typo.body2" Align="Align.Center">Visualiza tu evolución y mantente motivado.</MudText>
            </MudPaper>
        </MudItem>
        <MudItem xs="12" sm="6" md="4">
            <MudPaper Elevation="0" Class="pa-4 d-flex flex-column align-center">
                <MudIcon Icon="@Icons.Material.Filled.PersonalVideo" Color="Color.Primary" Size="Size.Large" Class="mb-2" />
                <MudText Typo="Typo.h6" Align="Align.Center">Personalización</MudText>
                <MudText Typo="Typo.body2" Align="Align.Center">Rutinas adaptadas a tus objetivos y disponibilidad.</MudText>
            </MudPaper>
        </MudItem>
    </MudGrid>

    <MudDivider Class="my-6" />

    <MudText Align="Align.Center" Typo="Typo.caption" Class="mt-8 mb-4">
        &copy; 2025 InfoGym - Todos los derechos reservados
    </MudText>
</MudContainer>